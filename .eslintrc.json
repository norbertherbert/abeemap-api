{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-bitwise": [
      "error",
      {
        "allow": [">>>"]
      }
    ],
    "import/extensions": [
      "error",
      "never",
      {
        "js": "always"
      }
    ]
  }
}
